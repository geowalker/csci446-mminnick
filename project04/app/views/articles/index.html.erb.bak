<h1 style="text-align:center">Articl.es</h1>
<h2 style="text-align:center">with a name .com hipsters love</h2>
<br />


<h3> All the Worlds Articles </h3>     <%= link_to 'Create a article', create_article_path %>

<table>
  <tr>
    <th>Title</th>
    <th>Author Name</th>
    <th>Body</th>
    <th>Creation Date</th>
  </tr>

<% @articles.each do |article| %>
  <tr>
    <td><%=h article.Title %></td>
    <td><%=h article.Author_Name %></td>
    <td><%=h article.Body %></td>
    <td><%=h article.Creation_Date %></td>
    <td><%= link_to 'Show', article %></td>
    <td><%= link_to 'Edit', edit_article_path(article) %></td>
    <td><%= link_to 'Destroy', article, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

