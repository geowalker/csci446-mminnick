<h1>Editing article</h1>

<% form_for(@article) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :Title %><br />
    <%= f.text_field :Title %>
  </p>
  <p>
    <%= f.label :Author_Name %><br />
    <%= f.text_field :Author_Name %>
  </p>
  <p>
    <%= f.label :Body %><br />
    <%= f.text_area :Body %>
  </p>
  <p>
    <%= f.label :Creation_Date %><br />
    <%= f.date_select :Creation_Date %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', @article %> |
<%= link_to 'Back', articles_path %>